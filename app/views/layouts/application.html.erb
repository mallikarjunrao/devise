<!DOCTYPE html>
<html>
<head>
  <title>Devise</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<% flash.each do |key, msg| %>
     <%=content_tag :div, msg, :class =>"flash_#{key}", :id => "app_flash"%>
<% end %>


<%if user_signed_in? %>
  Welcome to <%= current_user%>|<%= link_to "Sign Out",destroy_user_session_path %>
  <% else %> 
    <div align="right">    <%= link_to "Login", new_user_session_path %>&nbsp;&nbsp;
        &nbsp;|&nbsp;
        <%= link_to "Register", new_user_registration_path %>
  <% end %>
  </div>
<%= yield %>

</body>
</html>
